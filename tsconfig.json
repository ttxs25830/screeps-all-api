{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "forceConsistentCasingInFileNames": true,
        "lib": ["ESNext", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["**/dist", "**/node_modules", "**/test"],
    "include": ["src/**/*"]
}
